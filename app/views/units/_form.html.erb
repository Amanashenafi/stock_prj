<%= form_with(model: unit) do |form| %>
  <% if unit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
        <% unit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :unit_type, style: "display: block" %>
    <%= form.select(
      :unit_type,
      [["Select a unit type",nil],["Weight","weight"],["Volume","volume"],["Count","count"]],
      {},
      {class:"form-select"}
      )%>
  </div>

  <div style="margin-top:10px">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>