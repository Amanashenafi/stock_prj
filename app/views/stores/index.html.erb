<p style="color: green"><%= notice %></p>

<h1>Stores</h1>

<div id="stores">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th> code </th>
        <th> name </th>
        <th> address </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
      <tr>
        <td> <%= store.code%> </td>
        <td> <%= store.name%> </td>
        <td> <%=store.address%> </td>
        <td> <%= link_to "Show this store", store %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New store", new_store_path %>
