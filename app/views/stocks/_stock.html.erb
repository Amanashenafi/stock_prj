<div id="<%= dom_id stock %>">
  <p>
    <strong>Product:</strong>
    <%= Product.find(stock.product_id).name %>
  </p>

  <p>
    <strong>Unit:</strong>
    <%= Unit.find(stock.unit_id).name %>
  </p>

  <p>
    <strong>Store:</strong>
    <%= Store.find(stock.store_id).name %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= stock.quantity %>
  </p>

</div>
